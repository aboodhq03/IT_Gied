@model RegesterModel
@{
    ViewData["Title"] = "regester";
}

<h2>create an acount</h2>

<form asp-action="Regester" asp-controller="User" method="post" enctype="multipart/form-data" role="form">
    @Html.AntiForgeryToken()

    <!-- مهم: عرض كل الأخطاء (ModelState + Identity errors) -->
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="form-group">
        <label asp-for="User_name">User Name</label>
        <input asp-for="User_name" class="form-control" type="text" placeholder="enter Employee Full Name" />
        <span asp-validation-for="User_name" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        <label asp-for="User_email">user Email</label>
        <input asp-for="User_email" class="form-control" type="email" placeholder="enter User Email" />
        <span asp-validation-for="User_email" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" class="form-control" type="password" placeholder="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        <label asp-for="confirm_Password">confirm Password</label>
        <input asp-for="confirm_Password" class="form-control" type="password" placeholder="confirm Password" />
        <span asp-validation-for="confirm_Password" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        <label asp-for="ImageFile">Profile Image</label>
        <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>
    <br />

    <button type="submit" class="btn btn-primary">save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
